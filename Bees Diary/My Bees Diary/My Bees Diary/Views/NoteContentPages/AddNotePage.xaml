<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_Bees_Diary.Views.NoteContentPages.AddNotePage"
             Title ="Добави записка"
             BackgroundColor="AliceBlue">
    <ContentPage.Content>
        <StackLayout Spacing="2">
            <Label Text="Заглавие"/>
            <Entry x:Name="SummaryEntry" MaxLength="25" Placeholder="Въведете заглавие на записката."/>
            <Label Text="Съдържание"/>
            <Editor x:Name="DescriptionEditor" AutoSize="TextChanges" Placeholder="Въведете съдържанието на записката."/>
            <Button Text="Добави" x:Name ="AddButton" HorizontalOptions="CenterAndExpand" BackgroundColor="CornflowerBlue" TextColor="White" Clicked="AddButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>