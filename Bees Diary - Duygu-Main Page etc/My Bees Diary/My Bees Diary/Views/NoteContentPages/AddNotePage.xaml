<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_Bees_Diary.Views.NoteContentPages.AddNotePage"
             Title ="Добавяне">
    <ContentPage.Content>
        <StackLayout Spacing="2">
            <Entry x:Name="SummaryEntry" MaxLength="25" Placeholder="Въведете резюмето на записката."/>
            <Editor x:Name="DescriptionEditor" AutoSize="TextChanges" Placeholder="Въведете съдържанието на записката."/>
            <Button Text="Добави" x:Name ="AddButton" HorizontalOptions="CenterAndExpand" Clicked="AddButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>